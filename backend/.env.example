# Backend Environment Variables
# Copy this to .env file in backend/ directory

# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://portfolio_user:portfolio_password@localhost:5432/portfolio_management
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production-use-strong-random-string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Timesheet Integration - KEKA
KEKA_ENABLED=true
KEKA_API_KEY=your-keka-api-key-here
KEKA_API_URL=https://api.keka.com
KEKA_SYNC_INTERVAL=60
KEKA_SYNC_BATCH_SIZE=100

# Timesheet Integration - BambooHR
BAMBOOHR_ENABLED=false
BAMBOOHR_API_KEY=your-bamboohr-api-key
BAMBOOHR_DOMAIN=your-domain

# Timesheet Integration - Jira
JIRA_ENABLED=false
JIRA_API_URL=https://your-domain.atlassian.net
JIRA_API_TOKEN=your-jira-token

# Email Configuration (for reports, notifications)
EMAIL_ENABLED=false
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@portfoliomgmt.com

# Observability
SENTRY_DSN=
LOG_SERVICE=console
METRICS_ENABLED=false

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_ML_FORECASTING=false
FEATURE_REAL_TIME_SYNC=false
FEATURE_MOBILE_API=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=portfolio:

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_TIMEOUT_MS=1800000

# Company Configuration
DEFAULT_FISCAL_YEAR_START_MONTH=1
DEFAULT_WORK_HOURS_PER_DAY=8
DEFAULT_WORK_DAYS_PER_WEEK=5
