# Frontend Environment Variables
# Copy this to .env file in frontend/ directory

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=30000

# Application
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_APP_NAME=Portfolio Management

# Features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_SENTRY=false
REACT_APP_ENABLE_MIXPANEL=false

# Sentry (Error Tracking)
REACT_APP_SENTRY_DSN=

# MixPanel (Analytics)
REACT_APP_MIXPANEL_TOKEN=

# Charts & Visualization
REACT_APP_CHART_ANIMATION_DURATION=300
REACT_APP_HEATMAP_COLOR_SCHEME=viridis

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=25
REACT_APP_MAX_PAGE_SIZE=100

# Date Format
REACT_APP_DATE_FORMAT=YYYY-MM-DD
REACT_APP_DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss
REACT_APP_TIMEZONE=UTC

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ACCEPTED_FILE_TYPES=.csv,.xlsx,.xls

# Real-time Updates
REACT_APP_ENABLE_WEBSOCKET=false
REACT_APP_WEBSOCKET_URL=ws://localhost:3001
REACT_APP_AUTO_REFRESH_INTERVAL=60000

# Google Analytics
REACT_APP_GA_ID=

# Feature Flags
REACT_APP_SHOW_ADVANCED_FEATURES=false
REACT_APP_SHOW_BETA_FEATURES=false

# Theme
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#4F46E5
REACT_APP_SECONDARY_COLOR=#06B6D4

# Performance
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_LAZY_LOAD_THRESHOLD=0.1
